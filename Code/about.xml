<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepYellow">

    <ImageView
        android:id="@+id/all_img"
        android:layout_width="475dp"
        android:layout_height="230dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/all"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-31dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="391dp"
        android:layout_height="352dp"
        android:layout_marginTop="24dp"
        android:text="
This App is an online selling and shopping apps.Our main aim is to help the students and homemakers. We decided , in this app we only buy and sell home made products, foods etc. By this app people can earn money by sell their interests and hand made products. "
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_img" />
</androidx.constraintlayout.widget.ConstraintLayout>
